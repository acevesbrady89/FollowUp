<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.iteso.eduardo.followup2.ActivityComents">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mandanos tus comentarios"
        android:textSize="@dimen/Size25dp"
        android:textAlignment="center"
        android:layout_marginBottom="@dimen/Size90dp"
        />

    <EditText
        android:id="@+id/activitycoments_EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_weight=".6"
        android:textAlignment="textStart"
        android:hint="Escribe aqui"
        android:inputType="text"
        />

    <Button
        android:id="@+id/activitycoments_Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".3"
        android:text="Enviar"

        />



</LinearLayout>
