<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_weight=".4"
        android:gravity="center"
        android:layout_height="0dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".1"
            android:background="@android:color/holo_orange_light"/>
        <ImageView
            android:id="@+id/fragmentInstruction_logo"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight=".8"
            android:paddingBottom="@dimen/Padding50dp"
            android:src="@drawable/logo"
            android:layout_centerHorizontal="true" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".1"
            android:background="@color/BackLight"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_weight=".6"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/fragmentInstruction_bienvenida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/InstructionBienvenido"
            android:textSize="@dimen/Size32sp"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@color/FollowUp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".1"
            android:background="@android:color/holo_orange_light"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|top"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/fragmentInstruction_desc1"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/InstructionExplicacion1"
                android:textSize="20dp"/>
            <ImageView
                android:id="@+id/fragmentInstruction_twitterlogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/twitter"
                android:layout_centerHorizontal="true" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".1"
            android:background="@color/BackLight"/>
    </LinearLayout>


</LinearLayout>